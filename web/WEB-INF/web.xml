        <servlet-name>updater</servlet-name>
        <servlet-class>Security.Updater</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>topup</servlet-name>
        <servlet-class>Security.Topup</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/main/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>Security.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/main/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updater</servlet-name>
        <url-pattern>/main/updater</url-pattern>
    </servlet-mapping>
